# Дана матрица А размером 7 × 5. Максимальный элемент столбца заменить полусуммой первого и последнего элементов столбца, если максимальный элемент меньше этой полусуммы, в противном случае максимальный элемент заменить его номером в столбце.
print('Задача 2.5')
import numpy as np
A = np.array([
    [5, 18, 25, 72, 10],
    [8, 35, 28, 12, 9],
    [14, 22, 30, 56, 18],
    [19, 60, 45, 48, 29],
    [21, 17, 12, 11, 37],
    [33, 41, 52, 25, 21],
    [27, 24, 20, 70, 15]
])
for i in range(A.shape[1]):
    max_value = np.max(A[:, i])
    sum_half = (A[0, i] + A[-1, i]) / 2
    if max_value < sum_half:
        max_index = np.argmax(A[:, i])
        A[max_index, i] = sum_half
    else:
        max_index = np.argmax(A[:, i])
        A[max_index, i] = max_index

print("Матрица A после замены:")
print(A)
